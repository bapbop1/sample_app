---
const { posts } = Astro.props;
---
{posts.map(post => (
  <div class="col-3 col-12-medium">
    <section class="box feature">
      <a href={post.url} class="image featured" rel='nofollow'><img src={post.image} alt={post.alt} width = '100%' height = '100%' border = '0'/></a>
      <div class="inner">
        <header>
          <h2>{post.title}</h2>
          <p>{post.sub_title}</p>
        </header>
        <p set:html={post.desc}></p>
      </div>
    </section>

  </div>
))}
