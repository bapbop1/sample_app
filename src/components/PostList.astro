---
const { posts } = Astro.props;
---

<section class="space-y-6">
  {posts.map(post => (
    <article class="p-4 border rounded-lg bg-white">
      <h3 class="text-xl font-bold mb-1">{post.title}</h3>
      <p class="text-sm text-gray-600">‚≠ê {post.rating} / 5</p>
      <img src={post.image} alt={post.title} class="rounded mt-2 mb-2 max-h-40 object-cover w-full" />
      <p>{post.body.slice(0, 100)}...</p>
    </article>
  ))}
</section>
